<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unity3d.player"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions required by uPiper -->
    <!-- Storage permission for extracting dictionary files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" 
        tools:ignore="ScopedStorage" />
    
    <!-- For Android 10+ (API 29+), we use scoped storage, no permission needed -->
    
    <application>
        <!-- Application configuration will be merged by Unity -->
        
        <!-- Extract native libraries for debugging/inspection -->
        <meta-data android:name="android.bundle.enableUncompressedNativeLibs" android:value="false" />
    </application>

</manifest>